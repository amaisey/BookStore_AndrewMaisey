@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel


@*show the books!*@
@foreach (var b in Model.Books)
{
    <partial name="BookSummary" model="b" />
}

@*show page references*@
<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" page-url-category="@Model.Category"
     class="btn-group pull-right m-1"></div>

