@{
}

@model Book

<div class="card card-outline-primary m-1 p-1 text-center w-75 mx-auto">
    <h3 class="card-header">@Model.Title</h3>
    <div class="card-body">
        <h4 class="card-subtitle mb-2 text-muted">Author: @Model.Author</h4>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Category: @Model.Category</p>
        <p>Price: $@Model.Price</p>
        <p>NumPages: @Model.NumPages</p>
    </div>
    <form id="@Model.BookId" asp-page="/Purchase" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Purchase
            </button>
        </span>
    </form>
</div>